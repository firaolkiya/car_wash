<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#3E0AB4"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_height="46dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="37dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:contentDescription="TODO"
                android:src="@drawable/back">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/inter_bold"
                android:layout_height="wrap_content"
                android:text="이전">

            </TextView>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="42dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">


        <ImageView
            android:layout_width="25dp"
            android:id="@+id/alarm_icon"

            android:backgroundTint="@color/design_default_color_primary"
            android:background="@color/design_default_color_primary"
            android:src="@drawable/alarm"
            android:layout_marginHorizontal="5dp"
            android:contentDescription="alarm"
            android:layout_height="25dp">

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="59"
            android:textSize="30sp"
            android:textColor="@color/design_default_color_on_primary"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:fontFamily="@font/inter_bold"
        android:text="신용카드 결제를 진행하고 있습니다. \n 카드를 제거하지 마세요."
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        >

    </TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:paddingTop="10dp"
        android:paddingBottom="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#F2F0FE"
            android:gravity="center"
            android:paddingHorizontal="43dp"
            android:text="결제 예정 금액"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/inter_bold"
            android:textColor="#0A0758"
            android:textSize="25sp">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="베이직"
                android:fontFamily="@font/inter_semibold"
                android:textColor="#0A0758"
                android:textSize="25sp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￦ 10,000원"
                android:fontFamily="@font/inter_bold"
                android:textColor="#C80000"
                android:textSize="25sp">

            </TextView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>