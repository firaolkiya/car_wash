<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#3E0AB4"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="74dp"
        android:layout_height="46dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="37dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/back">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/inter_bold"
                android:layout_height="wrap_content"
                android:text="이전">

            </TextView>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="end|center"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="42dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="25dp"
            android:id="@+id/alarm_icon"

            android:backgroundTint="@color/design_default_color_primary"
            android:background="@color/design_default_color_primary"
            android:src="@drawable/alarm"
            android:layout_marginHorizontal="5dp"
            android:contentDescription="alarm"
            android:layout_height="25dp">

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="59"
            android:textFontWeight="700"
            android:textSize="30sp"
            android:textColor="@color/design_default_color_on_primary"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:fontFamily="@font/inter_bold"
        android:text="현금 투입구에 지폐를 넣어 주세요  \n   투입된 지폐는 반환되지 않습니다"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="244dp"
        android:layout_height="185dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:src="@drawable/inserting_bill"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#FFFFFF"
        android:paddingTop="10dp"
        android:paddingBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#F2F0FE"
            android:gravity="center"
            android:paddingHorizontal="43dp"
            android:text="결제 예정 금액"
            android:fontFamily="@font/inter_bold"
            android:textColor="#0A0758"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="베이직"
                android:fontFamily="@font/inter_semibold"
                android:textColor="#0A0758"
                android:textSize="25sp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￦ 10,000원"
                android:fontFamily="@font/inter_bold"
                android:textColor="#C80000"
                android:textSize="25sp">

            </TextView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>