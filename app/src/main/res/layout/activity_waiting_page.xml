<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#3E0AB4"
    android:layout_height="match_parent"
    tools:context=".WaitingPage">

    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="45dp"

        android:layout_marginStart="42dp"
        android:layout_marginTop="37dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/back">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이전">

            </TextView>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="end|center"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="42dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="27dp"
            android:id="@+id/alarm_icon"

            android:backgroundTint="@color/design_default_color_primary"
            android:background="@color/design_default_color_primary"
            android:src="@drawable/alarm"
            android:layout_marginHorizontal="5dp"
            android:contentDescription="alarm"
            android:layout_height="27dp">

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="59"

            android:textSize="30sp"
            android:textColor="@color/design_default_color_on_primary"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" 신용카드 결제를 진행하고 있습니다.\n  카드를 제거하지 마세요."
        android:textColor="#FFFFFF"
        android:textFontWeight="700"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#FFFFFF"
        android:paddingTop="10dp"
        android:paddingBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#F2F0FE"
            android:gravity="center"
            android:paddingHorizontal="43dp"
            android:text="결제 예정 금액"
            android:textColor="#0A0758"
            android:textFontWeight="700"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="베이직"
                android:textColor="#0A0758"
                android:textFontWeight="600"

                android:textSize="25sp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￦ 10,000원"
                android:textColor="#C80000"
                android:textFontWeight="700"
                android:textSize="25sp">

            </TextView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>