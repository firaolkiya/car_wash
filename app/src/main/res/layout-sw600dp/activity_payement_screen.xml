<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/main"
    android:background="@color/design_default_color_primary_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".LevelScreen">
    <LinearLayout
            android:layout_width="match_parent"
            android:baselineAligned="false"
            android:weightSum="3"

            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="40dp"
            android:id="@+id/header2"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="45dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="10dp"
                                android:src="@drawable/back"
                                android:layout_height="10dp">

                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_bold"
                                android:text="이전"
                                android:textFontWeight="700"
                                android:textSize="16sp">

                            </TextView>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:weightSum="1"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="fill_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:text="결제 방법을 선택해 주세요"
                    android:textColor="@color/design_default_color_on_primary"
                    android:textFontWeight="700"
                    android:textSize="24sp"
                    tools:ignore="NestedWeights">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/action"
                android:gravity="end|center"
                android:weightSum="5"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <ImageView
                    android:layout_width="25dp"
                    android:id="@+id/alarm_icon"

                    android:backgroundTint="@color/design_default_color_primary"
                    android:background="@color/design_default_color_primary"
                    android:src="@drawable/alarm"
                    android:scaleType="fitXY"
                    android:layout_marginHorizontal="5dp"
                    android:contentDescription="alarm"
                    android:layout_height="25dp">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:fontFamily="@font/inter_bold"
                    android:text="59"
                    android:textColor="@color/design_default_color_on_primary"
                    android:textFontWeight="700"
                    android:textSize="30sp">

                </TextView>

            </LinearLayout>
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearView1"
        app:layout_constraintTop_toBottomOf="@id/header2"
       app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="40dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:baselineAligned="false"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginVertical="25dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    app:strokeColor="#E8E8E8"
                    app:cardCornerRadius="8dp"
                    android:layout_gravity="end"
                    android:layout_height="112dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="50dp"
                            android:fontFamily="@font/inter_semibold"
                            android:text="현금"
                            android:textColor="#0A0758"
                            android:textSize="20sp">

                        </TextView>

                        <ImageView
                            android:layout_alignParentEnd="true"
                            android:layout_width="80dp"
                            android:layout_marginEnd="50dp"
                            android:layout_height="39dp"
                            android:src="@drawable/p1">

                        </ImageView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:gravity="start"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    app:strokeColor="#E8E8E8"
                    app:cardCornerRadius="8dp"
                    android:layout_gravity="start"
                    android:layout_height="112dp">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/inter_semibold"
                            android:text="RF카드 \n(세차카드)"
                            android:textColor="#0A0758"
                            android:textSize="20sp">

                        </TextView>

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="39dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="50dp"
                            android:contentDescription=" "
                            android:src="@drawable/p3">

                        </ImageView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    app:strokeColor="#E8E8E8"
                    app:cardCornerRadius="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="112dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_alignParentStart="true"
                            android:fontFamily="@font/inter_semibold"
                            android:text="신용카드"
                            android:layout_marginStart="40dp"
                            android:textColor="#0A0758"
                            android:textSize="20sp">

                        </TextView>

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_marginEnd="50dp"
                            android:layout_height="39dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/p2">

                        </ImageView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:gravity="start"
                android:layout_marginStart="30dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="300dp"
                    app:strokeColor="#E8E8E8"
                    app:cardCornerRadius="8dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="112dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_semibold"
                            android:layout_alignParentStart="true"
                            android:text="간편 결제"
                            android:textColor="#0A0758"
                            android:layout_marginStart="40dp"
                            android:textSize="20sp">

                        </TextView>
                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="50dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/p4">

                        </ImageView>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>




        </LinearLayout>

    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#FFFFFF"
        android:paddingTop="10dp"
        android:paddingBottom="25dp"
        android:layout_height="110dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#F2F0FE"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:paddingHorizontal="43dp"
            android:text="결제 예정 금액"
            android:textColor="#0A0758"
            android:textFontWeight="700"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>
        
        <LinearLayout
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="베이직"
                android:textColor="#0A0758"

                android:textFontWeight="600"
                android:textSize="25sp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="￦ 10,000원"
                android:textColor="#C80000"
                android:textFontWeight="700"
                android:textSize="25sp">

            </TextView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>